@using PagedList.Mvc
@model Website_Course_AVG.Areas.Admin.Data.ViewModels.AdminViewModels
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="body" class="app-body">
    <div class="row gx-3">
        <div class="col-xxl-12">
            <div class="card mb-3">
                <div class="card-body">
                    <div class="custom-tabs-container">
                        <ul class="nav nav-tabs" id="customTab" role="tablist">
                            <li class="nav-item" role="presentation">
                                <a class="nav-link active" id="tab-one" data-bs-toggle="tab" href="#one" role="tab"
                                   aria-controls="one" aria-selected="true">Account</a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a class="nav-link" id="tab-two" data-bs-toggle="tab" href="#two" role="tab"
                                   aria-controls="two" aria-selected="false">User</a>
                            </li>
                        </ul>
                        <div class="tab-content" id="customTabContent">
                            <div class="tab-pane fade show active" id="one" role="tabpanel">
                                <div class="p-2 text-center">
                                    <div class="col-xxl-12">
                                        <div class="card mb-3">
                                            <div class="card-body">
                                                <div class="table-responsive">
                                                    <table class="table table-bordered m-0">
                                                        <thead>
                                                        <tr>
                                                            <th>#</th>
                                                            <th>Username</th>
                                                            <th>Provide</th>
                                                            <th>Info</th>
                                                            <th>Created</th>
                                                            <th>Updated</th>
                                                            <th>Deleted</th>
                                                            <th>Action</th>
                                                        </tr>
                                                        </thead>
                                                        <tbody>
                                                        @foreach (var item in Model.AccountsPagedList)
                                                        {
                                                            <tr class="srow" data-id="@item.id">
                                                                <td class="item-row">@item.id</td>
                                                                <td class="item-row">@item.username</td>
                                                                <td class="item-row">
                                                                    <span class="d-inline-block text-truncate" style="max-width: 150px;">
                                                                        @item.provide
                                                                    </span>
                                                                </td>
                                                                <td class="item-row">
                                                                    <span class="d-inline-block text-truncate" style="max-width:150px;">
                                                                        @item.info
                                                                    </span>
                                                                </td>
                                                                <td class="text-success item-row">@item.created_at</td>
                                                                <td class="text-warning item-row">@item.updated_at</td>
                                                                <td class="text-danger item-row">@item.deleted_at</td>
                                                                <td class="d-flex justify-content-center">
                                                                    <button class="btn btn-info btn-sm me-1 border rounded-3 btn-update" data-id="@item.id">
                                                                        <i class="bi bi-pencil"></i>
                                                                    </button>
                                                                    <button class="btn btn-danger btn-sm ms-1 border rounded-3 btn-delete btn-open-modal">
                                                                        <i class="bi bi-trash"></i>
                                                                    </button>
                                                                </td>
                                                            </tr>

                                                        }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="panel-footer">
                                            <div class="MenuPage" id="accountPagination">
                                                @Html.PagedListPager(Model.AccountsPagedList, page => Url.Action("Index", new { page = page }))
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="two" role="tabpanel">
                                <div class="p-2 text-center">
                                    <div class="col-xxl-12">
                                        <div class="card mb-3">
                                            <div class="card-body">
                                                <div class="table-responsive">
                                                    <table class="table table-bordered m-0">
                                                        <thead>
                                                        <tr>
                                                            <th>#</th>
                                                            <th>Fullname</th>
                                                            <th>Email</th>
                                                            <th>Birthday</th>
                                                            <th>Gender</th>
                                                            <th>Username</th>
                                                            <th>Role/th>
                                                            <th>Created</th>
                                                            <th>Updated</th>
                                                            <th>Deleted</th>
                                                            <th>Action</th>
                                                        </tr>
                                                        </thead>
                                                        <tbody>
                                                        @foreach (var item in Model.UsersPagedList)
                                                        {
                                                            <tr class="srow" data-id="@item.id">
                                                                <td class="item-row-user">@item.id</td>
                                                                <td class="item-row-user">@item.fullname</td>
                                                                <td class="item-row-user">
                                                                    <span class="d-inline-block text-truncate" style="max-width: 150px;">
                                                                        @item.email
                                                                    </span>
                                                                </td>
                                                                <td class="item-row-user">
                                                                    <span class="d-inline-block text-truncate" style="max-width:150px;">
                                                                        @item.birthday
                                                                    </span>
                                                                </td>
                                                                @if (item.gender == true)
                                                                {
                                                                    <td class="item-row-user">Male</td>
                                                                }
                                                                @if (item.gender == false)
                                                                {
                                                                    <td class="item-row-user">Female</td>
                                                                }
                                                                @if (item.gender == null)
                                                                {
                                                                    <td class="item-row-user"></td>
                                                                }
                                                                <td class="item-row-user">@item.account.username</td>
                                                                <td class="item-row-user">@item.role</td>
                                                                <td class="text-success item-row-user">@item.created_at</td>
                                                                <td class="text-warning item-row-user">@item.updated_at</td>
                                                                <td class="text-danger item-row-user">@item.deleted_at</td>
                                                                <td class="d-flex justify-content-center">
                                                                    <button class="btn btn-info btn-sm me-1 border rounded-3 btn-update" data-id="@item.id">
                                                                        <i class="bi bi-pencil"></i>
                                                                    </button>
                                                                    <button class="btn btn-danger btn-sm ms-1 border rounded-3 btn-delete btn-open-modal">
                                                                        <i class="bi bi-trash"></i>
                                                                    </button>
                                                                </td>
                                                            </tr>
                                                        }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="panel-footer">
                                            <div class="MenuPage" id="userPagination">
                                                @Html.PagedListPager(Model.UsersPagedList, page => Url.Action("Index", new { page = page }))
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="ConfirmModal" tabindex="-1" aria-labelledby="ConfirmModalLabel"
                 aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title text-success" id="ConfirmModalLabel">
                                Confirm Remove Lesson
                            </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to remove this Lesson?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                Close
                            </button>
                            <button type="submit" class="btn btn-danger btn-submit-delete">
                                Submit
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="ErrorModal" tabindex="-1" aria-labelledby="ErrorModalLabel"
                 aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title text-danger" id="ErrorModalLabel">
                                Error
                            </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body text-danger">
                            <p>This lesson has exercise, you can't delete it!</p>
                            <p>Please delete the exercise.</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                Close
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    ul .pagination {
        justify-content: center;
    }

    .MenuPage {
        padding: 20px 0 10px 0;
    }

        .MenuPage li {
            display: inline;
        }
</style>

<style type="text/css">
    .MenuPage a {
        clear: both;
        color: black;
        padding: 4px 8px;
        text-decoration: none;
        background-color: #e8e8e8;
        border-radius: 5px;
        margin-left: 5px;
    }

        .MenuPage a:hover {
            background-color: darkcyan;
            border-radius: 5px;
        }

    a:not([href]):not([class]) {
        &, &:hover

    {
        background-color: dodgerblue;
        color: white;
    }

    }

    .btn-filter {
        background-color: #007bff;
        color: white;
        border-radius: 10px;
        border-color: transparent;
        height: 100%;
    }

        .btn-filter:hover {
            background-color: #0056b3;
            color: darkgray;
        }

        .btn-filter .clicked {
            background-color: #0056b3;
            color: darkgray;
        }

    .modal {
        top: 100%;
        transform: translateY(-100%);
    }
</style>

@section scripts
{
    <script>
        $(document).ready(function () {

            $('.btn-update').add('.item-row-user').click(function () {
                var id = $(this).closest('.srow').data('id');
                window.location.href = '/Admin/Account/Update?id=' + id;
            });

            $('.btn-open-modal').click(function () {
                $('#ConfirmModal').modal('show');
            });

            $('.btn-submit-delete').click(function () {
                $('#ConfirmModal').modal('hide');
                var id = $('.srow').data('id');
                $.ajax({
                    url: '/Admin/Account/Delete/' + id,
                    type: 'POST',
                    success: function (data) {
                        if (data.success) {
                            location.reload();
                        } else {
                            $('#ErrorModal').modal('show');
                        }
                    }
                });
            });
        });
    </script>
}
