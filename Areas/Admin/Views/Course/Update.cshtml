
@model Website_Course_AVG.Areas.Admin.Data.ViewModels.AdminViewModels
@{
    ViewBag.Title = "Course";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="app-body">
    <div id="form" class="card mb-3">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="card-header">
                <h5 class="card-title">Update course</h5>
            </div>
            <div class="card-body">
                <div class="row gx-3">
                    <div class="col-xl-4 col-sm-6 col-12">
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="m-0">
                                    <label class="form-label">Title</label>
                                    <input type="text" name="Course.title" class="form-control" placeholder="Title" value="@Model.Course.title" />
                                    @Html.ValidationMessage(@Model.Course.title, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4 col-sm-6 col-12">
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="m-0">
                                    <label class="form-label">Description</label>
                                    <input type="text" name="Course.description" class="form-control" placeholder="Description" value="@Model.Course.description" />
                                    @Html.ValidationMessage(@Model.Course.description, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4 col-sm-6 col-12">
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="m-0">
                                    <label class="form-label">Author</label>
                                    <input text="text" name="Course.author" class="form-control" placeholder="Author" value="@Model.Course.author" />
                                    @Html.ValidationMessage(@Model.Course.author, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4 col-sm-6 col-12">
                        <div class="card mb-3">
                            <div class="card-body">
                                <label class="form-label">Price</label>
                                <div class="input-group">
                                    <input type="text" name="Course.Price" class="form-control" value="@Model.Course.price" />
                                    <span class="input-group-text">VND</span>
                                    @Html.ValidationMessage(@Model.Course.price.ToString(), "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4 col-sm-6 col-12">
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="m-0">
                                    <label class="form-label">Select Category </label>
                                    <select class="form-select" aria-label="Default select example" name="Course.category_id">
                                        <option selected="">Open this select menu</option>
                                        @foreach (var category in Model.Categories)
                                        {
                                            <option value="@category.id" @(category.id == @Model.Course.category_id ? "selected" : "") name="Course.category_id">@category.name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="d-flex gap-2 justify-content-end">
                    <button type="button" class="btn btn-outline-secondary btn-cancel">Cancel</button>
                    <button type="submit" class="btn btn-success">Submit</button>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('.btn-cancel').click(function () {
                window.location.href = '/Admin/Course';
            })
        })
    </script>
}