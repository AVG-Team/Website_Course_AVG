@model Website_Course_AVG.Models.lesson
@{
    ViewBag.Title = ViewBag.CourseTitle;

    Layout = "~/Views/Shared/_LayoutNotFooter.cshtml";
    int learned_lesson_id = ViewBag.LessonLearnedId;
    Website_Course_AVG.Models.note note = new Website_Course_AVG.Models.note();
}

@section Styles {
    @Styles.Render("~/Content/lesson.css")
    @Styles.Render("~/Content/ModalSide.css")
}

@section Header {
    <header>
        <div id="sticky-header-lesson" class="menu-in-lesson">
            <div class="d-flex">
                <button class="btn-back mx-2"><i class="fas fa-chevron-left fs-5"></i></button>
                <div class="logo me-5">
                    <a href="@Url.Action("Index", "Home")">
                        <img src="~/Content/img/logo/logo.png" alt="Logo">
                    </a>
                </div>
                <h4 class="title">@ViewBag.CourseTitle</h4>
            </div>
            <button class="d-flex header-note" data-bs-toggle="modal" data-bs-target="#modal_note"><i class="fas fa-sticky-note fs-5 me-2"></i> <p class="fs-5 mb-0 me-2">Notes</p></button>
        </div>
    </header>
}

<main id="main-lesson" class="h-100">
    <section class="row h-100">
        <div class="col-9 position-fixed top-0 bottom-0 overflowY-scroll start-0 to-top">
            <div class="col-12 bg-black text-center h-75">
                <video id="video_lesson" controls controlsList="nodownload" class="w-100 h-100">
                    <source src="@ViewBag.Url" type="video/mp4">
                </video>
            </div>
            <div class="col-12 mt-2">
                <div class="title d-flex justify-content-around align-items-center">
                    <div class="mt-2">
                        <h3 class="text-dark">@Model.title</h3>
                        <p class="date-update">Cập Nhật Ngày @((Convert.ToDateTime(Model.updated_at)).ToString("dd - MM - yyyy"))</p>
                    </div>
                    <button type="button" class="border-0 rounded h-3 pc-1 btn-add-note" data-bs-toggle="modal" data-bs-target="#modal_add_note">
                        <i class="fas fa-plus"></i>
                        Thêm ghi chú
                    </button>
                </div>
                <div class="description text-body mt-5 text-justify mx-5">
                    @Model.description
                </div>
            </div>
            <div class="position-fixed bottom-0 mb-5 row" style="width:100%">
                <div class="col-9 position-relative">
                    <button class="btn-comment" data-bs-toggle="modal" data-bs-target="#modal_comment">
                        <i class="far fa-comments fs-5" style="color: #ff5800; margin-top:3px"></i>
                        <p class="ms-3 mb-0 text-dark" style="font-family: 'PoppinsVH'; font-weight: bold; color: #ff5800 !important; font-size: 1rem;">Hỏi Đáp</p>
                    </button>
                </div>
            </div>
        </div>
        <div class="col-3 position-fixed end-0 top-0 bottom-0 to-top pt-2 px-0 overflowY-scroll">
            <div class="mt-3">
                <h4 class="text-dark ms-3">Nội Dung Khóa Học</h4>
            </div>
            @foreach(var item in ViewBag.Lessons)
            {
                <div class="py-2 px-4 div-lesson @(item.id == learned_lesson_id ? "active" : "") @(item.id > learned_lesson_id ? "disable" : "")">
                    <h5 class="text-dark font-default" style="font-weight: 500;">@item.index . @item.title</h5>
                    <div class="d-flex justify-content-between">
                        <span class="d-flex position-relative">
                            <i class="fas fa-play-circle"></i>
                            <p class="time position-absolute" style="top: -0.4rem; left: 1.5rem;">@Website_Course_AVG.Managers.Helpers.ConvertTime(item.time)</p>
                        </span>
                        @if (item.id < learned_lesson_id)
                        {
                            <span><i class="fas fa-check-circle" style="color:green;"></i></span>

                        }
                    </div>
                </div>
            }
        </div>
    </section>
</main>

@section Footer {
    <footer>
        <div class="footer-in-lesson">
            <div>
                @if (ViewBag.Identity.IdPrevious != 0)
                {

                    <a href="@Url.Action("Index", "Lesson")?courseId=@Model.course_id&lessonId=@ViewBag.Identity.IdPrevious" class="first fs-5">
                        <i class="fas fa-chevron-left"></i>Previous Lesson
                    </a>
                }
                @if (ViewBag.Identity.IdNext != 999999)
                {
                    <a href="@Url.Action("Index", "Lesson")?courseId=@Model.course_id&lessonId=@ViewBag.Identity.IdNext" class="last fs-5">Next Lesson <i class="fas fa-chevron-right"></i></a>
                }
            </div>
            <div class="menu-footer position-absolute top-0 bottom-0 text-dark d-flex me-3" style="right:0; align-items:center;"><p class="mb-0 text-dark" style="font-size:1rem;">@Model.title</p> <i class="fas fa-sliders-h fs-5 p-2 ms-3" style="cursor:pointer"></i></div>
        </div>
    </footer>
}

@section Scripts {
    @Scripts.Render("~/Scripts/lesson.js")
}

@section Modals {
    <div class="modal modal-right fade" id="modal_note" tabindex="-1" role="dialog" aria-labelledby="modal_note">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title text-dark">Ghi Chú Của Tôi</h3>
                    <button type="button" class="close position-absolute btn-none end-0 fs-5 me-2"
                            data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true"><i class="fas fa-times close-modal-note"></i></span>
                    </button>
                </div>
                <div class="modal-body px-5">
                    @for (int i = 0; i < 10; i++)
                    {
                        <div class="note-item mt-2">
                            <div class="note-item-header">
                                <div class="d-flex">
                                    <button class="note-time" onclick="setTimeVideo(30)">00:30</button>
                                    <div class="note-title fs-5" style="font-weight:bold;">Title Lesson</div>
                                </div>
                                <div>
                                    <button class="btn-none text-gray">
                                        <i class="fa-solid fa-pencil me-3 note-item-icon"></i>
                                    </button>
                                    <button class="btn-none text-gray">
                                        <i class="fa-solid fa-trash me-1 note-item-icon"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="note-item-content mt-3">
                                Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s,
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>

    <div class="modal modal-bottom fade" id="modal_add_note" tabindex="-1" role="dialog" aria-labelledby="modal_add_note">
        <div class="modal-dialog row" role="document">
            <div class="modal-content col-9" style="border-top: 1px #c7b8b8 solid;">
                <div class="modal-header" style="justify-content: unset;">
                    <h5 class="modal-title text-dark">Thêm Ghi Chú Tại</h5>
                    <span class="note-time ms-2">00:00</span>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        @using (Html.BeginForm("Create", "Note", FormMethod.Post, new { id = "form_add_note" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.LabelFor(model => note.content, htmlAttributes: new { @class = "control-label" })
                            @Html.TextAreaFor(model => note.content, new { @class = "form-control", id = "inp_note", rows = "3" })
                            <button type="submit" class="btn btn-primary btn-note-save">Save changes</button>

                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-note-close" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary btn-note-save" id="btn_submit_add_note">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal modal-right fade" id="modal_comment" tabindex="-1" role="dialog" aria-labelledby="modal_comment">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <div>
                        <h3 class="modal-title text-dark">Hỏi Đáp</h3>
                        <p>( Please do not comment spam or use vulgar or regionally discriminatory words )</p>
                    </div>
                    <button type="button" class="close position-absolute btn-none end-0 fs-5 me-2 top-0 mt-3" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true"><i class="fas fa-times close-modal-note"></i></span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="mb-3 d-flex">
                        <label for="text_comment" class="form-label me-3">
                            <i class="fas fa-user fs-5 mt-1"></i>
                        </label>
                        <textarea class="form-control" id="text_comment" rows="3" placeholder="Do you have any questions about this lesson?"></textarea>
                    </div>
                    <div style="text-align: end;">
                        <button type="button" class="btn-save-comment">Save Changes</button>
                    </div>
                    <div class="mb-3 d-flex">
                        <label for="text_comment" class="form-label me-3">
                            <i class="fas fa-user fs-5" style="margin-top: 0.65rem !important"></i>
                        </label>
                        <div>
                            <p class="text-dark">Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galle</p>
                        </div>
                    </div>
                    <div class="mb-3 d-flex">
                        <label for="text_comment" class="form-label me-3">
                            <i class="fas fa-user-shield fs-5 mt-1 text-success" style="margin-top: 0.65rem !important"></i>
                        </label>
                        <div>
                            <p class="text-dark">Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galle</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}