                                            </svg>
                                        </div>
                                        <div>
                                            <h4 class="mb-3">Phone</h4>
                                            @Html.ValidationSummary("", new { @class = "text-danger" })
                                            <p class="mb-0">
                                                <a class="link-secondary text-decoration-none" href="tel:+15057922430">@Html.DisplayFor(model => model.contact.phone, new { @class = "" })</a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="d-flex mb-0">
                                        <div class="me-4 text-primary">
