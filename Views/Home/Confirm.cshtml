
@{
    ViewBag.Title = "Confirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confirm Page</title>


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Custom CSS -->
    <style>
        .fa {
            font-size: x-large;
        }
        .social-icons a {
            display: flex;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: lightgrey;
            margin: 0 auto;
        }
        h6{
            color: black;
        }
    </style>
    <!-- Bootstrap CSS -->
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="container custom-container">
        <div class="row">
            <div class="col-12">
                <div class="row justify-content-center mt-5">
                    <div class="col-md-4 shadow-lg p-4 bg-light">
                        <h1 class="text-center mb-4 fw-bold fs-4 text-primary">Confirm Information</h1>
                        <div class="social-icons mb-4">
                            <a href="#" class="text-decoration-none justify-content-center align-items-center">
                                <i class="fa fa-twitter text-dark"></i>
                            </a>
                        </div>
                        <form class="text-center">
                            <div class="mb-3 d-inline-flex text-dark">
                                <h6>Username: </h6>
                                <h6 class="ms-2"> Nguyễn Văn Hoàng</h6>
                            </div>
                            <div class="mb-3 d-inline-flex">
                                <h6>Email: </h6>
                                <h6 class="ms-2"> 1234@gmail.com</h6>
                            </div>
                            <div class="d-flex justify-content-between">
                                <button type="button" class="btn btn-danger text-capitalize">Cancel</button>
                                <button type="submit" class="btn btn-primary ">Confirm</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

